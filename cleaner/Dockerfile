# ===============================
# ğŸ§± Base image
# ===============================
FROM python:3.12-slim

# ===============================
# ğŸ—ï¸ Environment setup
# ===============================
WORKDIR /app

# Prevent Python from writing .pyc files and buffering logs
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# ===============================
# ğŸ§© System dependencies
# ===============================
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ===============================
# ğŸ“¦ Copy source and install deps
# ===============================
COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of your cleaner code
COPY . .

# ===============================
# ğŸ“ Ensure /data/gold directory exists (for persistent DuckDB)
# ===============================
RUN mkdir -p /data/gold

# ===============================
# ğŸš€ Default command: run the RabbitMQ consumer
# ===============================
CMD ["python", "cleaner.py"]
